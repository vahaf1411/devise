<center><h1>Admin Page</h1></center>
<h2>Users</h2>
<table class="table table-bordered">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Firstname</th>
      <th scope="col">Lastname</th>
      <th scope="col">Username</th>
      <th scope="col">Avatar</th>
      <th scope="col">AccountType</th>
      <th scope="col">Email</th>
      
      
    </tr>
  </thead>
<tbody>
<% @users.each do |user| %>
    <tr>
    <td><%= user.id %></td>
    <td><%= user.firstname %></td>
    <td><%= user.lastname %></td>
    <td><%= user.username %></td>
    <td><%= image_tag user.avatar, width:'30px' %></td>
    <td><%= user.acc_type %></td>
    <td><%= user.email %></td>
    
   
    </tr>
    
    <% end %>
    </tbody>
    </table>
    <br/>
    <h2>User's posts</h2>
    <table class="table table-bordered">
  <thead>
    <tr>
      
      <th scope="col">User Name</th>
      <th scope="col">Title</th>  
      <th scope="col">Body</th>
      <th scope="col">Images</th>
      
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
        <tr>
        <td><%= post.user.username %></td>
       <td> <%= post.title %></td>
       <td> <%= post.body %></td>
       <td><% post.images.each do |image| %>
        <%= image_tag image, width:"30px" %>
            <% end %></td>
       </tr>
        <% end %>
        </tbody>
        </table>
